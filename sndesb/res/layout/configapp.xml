<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/myBackgroundColour"   
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:paddingBottom="20dp"
    android:orientation="vertical">
    <TextView
        android:text="@string/configheading1"
        android:id="@+id/configheading1" 
        android:textSize="18dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:clickable="false"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myTextColour">
    </TextView>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="@color/myBackgroundColour"   
        android:clickable="false"
        android:orientation="horizontal">
        <TextView
            android:text="@string/configsearchlength"
            android:id="@+id/configsearchlength" 
            android:clickable="false"
            android:textSize="16dp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_width="190dip"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextColour">
        </TextView>
        <EditText 
         	android:id="@+id/configSearchLengthField" 
         	android:layout_height="wrap_content" 
	        android:textColor="@color/myTextColour" 
		    android:textSize="16dp"
			android:textStyle="bold"
        	android:layout_width="80dp"
         	android:inputType="number">
        </EditText>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="@color/myBackgroundColour"   
        android:clickable="false"
        android:orientation="vertical">
        <TextView 
            android:text="@string/configsearchforbund"
            android:id="@+id/configsearchforbund" 
            android:clickable="false"
            android:textSize="16dp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:gravity="left" 
            android:layout_width="174dp"
            android:layout_height="wrap_content" 
            android:textColor="@color/myTextColour">
        </TextView>
        <Spinner 
            android:id="@+id/configSearchForbundField" 
            android:textSize="16dp"
            android:layout_width="fill_parent" 
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="@color/myBackgroundColour"   
        android:clickable="false"
        android:orientation="vertical">
        <TextView
            android:text="@string/configsearchklubb"
            android:id="@+id/configsearchklubb" 
            android:clickable="false"
            android:textSize="16dp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:gravity="left" 
            android:layout_width="174dp"
            android:layout_height="wrap_content" 
            android:textColor="@color/myTextColour">
        </TextView>
        <Spinner 
            android:id="@+id/configSearchKlubbField" 
            android:textSize="16dp"
            android:layout_width="fill_parent" 
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">
        </Spinner>    
	</LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="@color/myBackgroundColour"   
        android:clickable="false"
        android:orientation="vertical">
        <Button 
        	android:id="@+id/configcreatedatabase" 
        	android:text="@string/configcreatedatabase" 
            android:layout_width="200dip"
            android:layout_height="wrap_content"
        	android:textSize="16dp" 
            android:textStyle="bold"
        	android:onClick="myCreateDatabaseClickHandler"         	
            android:textColor="@color/myTextColour">
        </Button>
        <Button 
        	android:id="@+id/configupdateeventor" 
        	android:text="@string/configupdateeventor" 
            android:layout_width="200dip"
        	android:layout_height="wrap_content"
        	android:textSize="16dp" 
            android:textStyle="bold"
        	android:onClick="myCreateDatabaseClickHandler"
            android:textColor="@color/myTextColour">
        </Button>
    </LinearLayout>    
</LinearLayout>